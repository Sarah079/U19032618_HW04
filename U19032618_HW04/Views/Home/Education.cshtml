                    @* info *@
                    <p class="card-text"></p>
                    <a href="#" class="btn btn-primary">More information</a>
                </div>
            </div>
        </div>
        @* Card 3 *@
        <div class="col-sm-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=".../100px180/" alt="Card image cap">
                <div class="card-body">
